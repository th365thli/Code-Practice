package Problems;

public class LongestPalindrome {
    public static String longestPalindrome(String s) {
        String longestP = "";
        for (int i = 0; i < s.length(); i++) {
            String temp = expand(s, i);
            if (temp.length() > longestP.length()) {
                longestP = temp;
            }
        }
        return longestP;
    }
    
    public static String expand(String s, int pivot) {
        int l = pivot;
        int r = pivot;
        String maxP = "";
        while(l > 0 && r < s.length()-1) {
            if (s.charAt(l-1) == s.charAt(r+1)) {
                maxP = s.substring(l-1, r+1+1);
                l--;
                r++;
            }
        }
        return maxP;
    }
    
    public static void main(String[] args) {
    	String s = "babad";
    	System.out.println(longestPalindrome(s));
    }
}