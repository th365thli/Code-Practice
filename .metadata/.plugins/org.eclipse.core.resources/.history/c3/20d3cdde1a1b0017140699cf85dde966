package Problems;

public class LongestPalindrome {
	  public static String longestPalindrome(String s) {
		  
		   if (s.length() == 1) {
			   return s;
		   }
		  
	        String longestP = "";
	        for (int i = 0; i < s.length(); i++) {
	            String temp = expand(s, i);
	            if (temp.length() > longestP.length()) {
	                longestP = temp;
	            }
	        }
	        return longestP;
	    }
	    
	    public static String expand(String s, int pivot) {
	        int l = pivot;
	        int r = pivot;
	        String maxP = "";
	        while(l >= 0 && r < s.length()) {
	            if (s.charAt(l) == s.charAt(r)) {
	                maxP = s.substring(l, r+1);
	                r++;
	            } else {
	            	l--;
	            }
	            if (s.charAt(l) != s.charAt(r)) {
	            	return maxP;
	            }
	        }
	        return maxP;
	    }
	    
	    public static void main(String[] args) {
	    	String s = "abcda";
	    	System.out.println(longestPalindrome(s));
	    }
	}