public class LongestPalindrome {
    public String longestPalindrome(String s) {
        String longestP = "";
        for (int i = 0; i < s.length(); i++) {
            String temp = expand(s, i);
            if (temp.length() > longestP.length()) {
                longestP = temp;
            }
        }
        return longestP;
    }
    
    public String expand(String s, int pivot) {
        int l = pivot;
        int r = pivot;
        String maxP = "";
        while(l > 0 && r < s.length()) {
            if (s.charAt(l) == s.charAt(r)) {
                maxP = s.substring(l, r+1);
                l--;
                r++;
            }
            return maxP;
        }
        return maxP;
    }
}